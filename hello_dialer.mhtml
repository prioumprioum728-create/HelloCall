<script>
let number = '';
function press(digit){
  number += digit;
  document.getElementById('callDisplay').textContent = number;
}
function backspace(){
  number = number.slice(0,-1);
  document.getElementById('callDisplay').textContent = number;
}
function call(){
  if(!number){alert('Enter a number first!'); return;}
  alert('Calling ' + number + '... (simulation)');
  number=''; document.getElementById('callDisplay').textContent='';
}

